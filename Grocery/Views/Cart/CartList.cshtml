@model IEnumerable<Online_Grocey.Models.Cart>

@{
    ViewData["Title"] = "CartList";
}

<h1>CartList</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UniqueNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UniqueNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CartID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CartID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CartID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    </table>

